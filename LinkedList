#include <bits/stdc++.h>
using namespace std ;

// struct Node {
    
//     public:
//     int data ;
//     Node* next ;
    
//     public:
//     Node(int data1, Node* next1) {
//         data = data1 ;
//         next = next1 ;
//     }  
// };
class Node {
    
    public:
    int data ;
    Node* next ;
    
    Node() {
        data ;
        next = nullptr ;
    }
    
    public:
    Node(int data1) {
        data = data1 ;
        next = nullptr ;
    }
    
};

Node* convertArr2LL(vector<int> &arr) {
    Node* head = new Node(arr[0]) ;
    Node* track = head ;
    
    for(int i = 1 ; i < arr.size() ; i++) {
        Node* temp = new Node(arr[i]) ;
        track->next = temp ;
        track = temp ;
    }
    
    return head ; 
}

void traversal(Node* head) {
    while(head != NULL) {
        cout << head->data << " " ;
        head = head->next ;
    }
}

Node* removeHead(Node* head) {
    
    if(head == NULL || head->next == NULL) return nullptr ;
    
    Node* temp = head ;
    head = head->next ;
    free(temp) ;
    return head ;
}

Node* removeTail(Node* head) {
    
    if(head == NULL || head->next == NULL) return nullptr ;
    
    Node* temp = head ;
    Node* dummy ;
    
    while(temp->next->next) {
        temp = temp->next ;
    }
    
    dummy = temp->next ;
    // cout << dummy->data ;
    delete dummy ;
    
    temp->next = NULL ;
    return head ;
}

Node* deleteKthNode(Node* head, int k) {
    if(head == NULL) return NULL ;
    
    if(k == 1) {
        Node* temp = head ;
        head = head->next ;
        delete temp ;
        return head ;
    }
    
    int cnt = 0 ;
    Node* temp = head;
    Node* prev ;
    
    while(temp != NULL) {
        cnt++ ;
        
        if(cnt == k) {
            prev->next = prev->next->next ;
            free(temp);
            break;
        }
        
        prev = temp ;
        temp = temp->next ;
    }
    
    return head ;
}

Node* removeEl(Node* head, int el) {
    if(head == NULL) return NULL ;
    
    if(head->data == el) {
        Node* temp = head ;
        head = head->next ;
        delete temp ;
        return head; 
    }
    
    Node* temp = head ;
    Node* prev ;
    
    while(temp != NULL) {
        if(temp->data == el) {
            prev->next = prev->next->next ;
            break ;
        }
        
        prev = temp ;
        temp = temp->next ;
    }
    
    return head ;
}

Node* addNodeFront(Node* head , int el) {
    Node* temp = new Node(el) ;
    temp->next = head ;
    head = temp ;
    return head ;
}

Node* addNode(Node* head, int pos, int el) {
    
    if(pos == 1) {
        Node* temp = new Node(el) ;
        temp->next = head ;
        head = temp ;
        return head ;
    }
    
    int cnt = 0 ;
    Node* track = head ;
    Node* prev ;
    
    while(track != NULL) {
        cnt++ ;
        if(cnt == pos) {
            Node*temp = new Node(el) ;
            temp->next = track ;
            prev->next = temp ;
            break ;
        }
        prev = track ;
        track = track->next ;
    }
    
    return head ;
}

Node* addNodeBack(Node* head, int el) {
    Node* temp = new Node(el) ;
    Node* track = head ;
    
    while(track->next) {
        track = track->next ;
    }
    
    track->next = temp ;
    return head ;
}

int main() {
    
   vector<int> arr = {1,2,3,4,5} ;
   
   Node* head = convertArr2LL(arr) ;
   traversal(head);
   
   cout << endl ;
   head = removeHead(head) ;
   traversal(head) ;
   
   cout << endl ;
   head = removeTail(head) ;
   traversal(head) ;
   
   cout<< endl ;
   head = deleteKthNode(head, 2) ;
   traversal(head) ;
   
   cout<< endl ;
   head = removeEl(head, 2) ;
   traversal(head) ;
   
   cout<< endl ;
   head = addNodeFront(head, 2) ;
   traversal(head) ;
   
   cout<< endl ;
   head = addNodeBack(head, 5) ;
   traversal(head) ;
   
   cout<< endl ;
   head = addNode(head, 2, 3) ;
   traversal(head) ;
   
}

Output:
1 2 3 4 5 
2 3 4 5 
2 3 4 
2 4 
4 
2 4 
2 4 5 
2 3 4 5 
=========================================================================================
Doubly Linked List 

#include <bits/stdc++.h>
using namespace std ;

class Node {
    public:
    int data ;
    Node* next ;
    Node* back ;
    
    Node() {
        next = back = nullptr ;
    }
    
    Node(int data1) {
        data = data1 ;
        next = back = nullptr;
    }
};

Node* convertArr2DLL(vector<int> &arr) {
    Node* head = new Node(arr[0]) ;
    Node* track = head ;
    
    for(int i = 1 ; i < arr.size() ; i++) {
        Node* temp = new Node(arr[i]) ;
        track->next = temp ;
        temp->back = track ;
        track = temp ;
    }
    return head ;
}

Node* deleteHead(Node* head) {
    if(head == NULL || head->next == NULL) return NULL ;
    
    Node* prev  = head ;
    
    head = head->next ;
    head->back = nullptr ;
    
    cout<< "Head Node " << prev->data << endl ;
    delete prev ;
    
    return head ;
}

Node* deleteTail(Node* head) {
    if(head == NULL || head->next == NULL) return NULL ;
    
    Node* track = head ; 
    Node* dummy ;
    
    while(track->next->next != NULL) {
        track = track->next ;
    }
    dummy = track->next ;
    track->next = nullptr ;
    
    cout <<"Tail Node "<< dummy->data << endl ;
    delete dummy ;
    
    return head ;
}

Node* deleteKthNode(Node* head, int k) {
    
    if(head->next == NULL) {
        return NULL ;
    }
    
    if(k == 1) {
        Node* prev = head ;
        head = head->next ;
        head->back = nullptr ;
        
        delete prev ;
        
        return head ;
    }
    
    int cnt = 0 ; 
    Node* track = head ;
    Node* prev ;
    
    while(track != NULL) {
        cnt++ ;
        
        if(cnt == k) {
            
            // Tail Node
            if(track->next == nullptr) {
                prev->next = nullptr ;
                
                cout << "last node " << track->data << endl ;
                delete track ;
                break ;
            }
            
            // Middle Node
            
            prev->next = track->next ;
            track->next->back = prev ;
            
            cout << "middle node " << track->data << endl ;
            
            track->back = track->next = nullptr ;
            delete track ;
            
            break ;
        }
        
        prev = track ;
        track = track->next ;
    }
    
    return head ;
}

Node* removeKthNode(Node* head, int k) {
    if(head == NULL) return NULL ;
    
    int cnt = 0 ;
    Node* track = head ;
    
    while(track != NULL) {
        cnt++ ;
        
        if(cnt == k) break ;
        
        track = track->next ;
    }
    
    Node* prev = track->back ;
    Node* front = track->next ;
    
    if(prev == NULL && front == NULL) {
        // Single Element
        return NULL ;
    }
    else if (prev == NULL) {
        // Head Node
        return deleteHead(head) ;
    }
    else if(front == NULL) {
        // Tail Node
        return deleteTail(head) ;
    }
    
    // Middle Node
    prev->next = front ;
    front->back = prev ;
    
    track->next = track->back = nullptr ;
    cout << "middle Node "<< track->data << endl ;
    
    delete track ;
    return head ;
}

Node* addNodeFront(Node* head, int el) {
    Node* temp = new Node(el) ;
    
    if(head == NULL) return temp ;
    
    temp->next = head ;
    head->back = temp ;
    head = temp ;
    
    return head ;
}

Node* addNodeBack(Node* head, int el) {
    Node* temp = new Node(el) ;
    
    if(head == NULL) return temp ;
    
    Node* track = head ;
    
    while(track->next != NULL) {
        track = track->next ;
    }
    
    track->next = temp ;
    temp->back = track ;
    
    return head ;
}

Node* addNodeMiddle(Node* head, int pos, int el) {
    Node* temp = new Node(el) ;
    
    if(head == NULL) return temp ;
    
    if(pos == 1) {
        return addNodeFront(head, el) ;
    }
    
    int cnt = 0 ; 
    Node* track = head ;
    
    while(track != NULL) {
        cnt++ ;
        
        if(cnt == pos) break ;
        
        track = track->next ;
    }
    
    Node* prev = track->back ;
    
    prev->next = temp ;
    temp->next = track ;
    temp->back = prev ;
    track->back = temp ;
    
    return head ;
}

void traversal(Node* head) {
    Node* temp = head;    
    while(temp != NULL) {
        cout << temp->data << " " ;
        temp = temp->next ;
    }
    cout << endl ;
}

int main() {
    
    vector<int> arr = {1,2,3,4,5,6} ;
    
    Node* head = convertArr2DLL(arr);
    traversal(head) ;
    
    head = deleteHead(head) ;
    traversal(head) ;
    
    head = deleteTail(head) ;
    traversal(head) ;
    
    head = deleteKthNode(head, 4) ;
    traversal(head) ;
    
    head = removeKthNode(head,2);
    traversal(head) ;
    
    head = addNodeFront(head,10);
    traversal(head) ;
    
    head = addNodeBack(head,20);
    traversal(head) ;
    
    head = addNodeMiddle(head,3,15);
    traversal(head) ;
    
}

Output: 
1 2 3 4 5 6 
Head Node 1
2 3 4 5 6 
Tail Node 6
2 3 4 5 
last node 5
2 3 4 
middle Node 3
2 4 
10 2 4 
10 2 4 20 
10 2 15 4 20 
